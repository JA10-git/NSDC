pipeline {
    agent any

    environment {
        IMAGE_NAME = "react-app"
        CONTAINER_NAME = "blissful_pascal"
    }

    stages {

        // ‚ùå Clone Code stage REMOVED
        // Jenkins already checks out the repo using SCM

        stage('Build Docker Image') {
            steps {
                dir('welcome-react') {
                    bat 'docker build -t %IMAGE_NAME% .'
                }
            }
        }

        stage('Stop Old Container') {
            steps {
                bat '''
                docker stop %CONTAINER_NAME% || exit 0
                docker rm %CONTAINER_NAME% || exit 0
                '''
            }
        }

        stage('Run Docker Container') {
            steps {
                bat '''
                docker run -d -p 3000:80 --name %CONTAINER_NAME% %IMAGE_NAME%
                '''
            }
        }
    }

    post {
        success {
            echo 'React app deployed using Docker successfully üéâ'
        }
        failure {
            echo 'Deployment failed ‚ùå'
        }
    }
}
