pipeline {
    agent any

    tools {
        nodejs 'NodeJS-22'
    }

    stages {

        stage('Install Dependencies') {
            steps {
                dir('welcome-react') {
                    bat 'npm install'
                }
            }
        }

        stage('Build React App') {
            steps {
                dir('welcome-react') {
                    bat 'npm run build'
                }
            }
        }
    }

    post {
        success {
            echo 'React build successful ğŸ‰'
        }
        failure {
            echo 'Build failed âŒ'
        }
    }
}
